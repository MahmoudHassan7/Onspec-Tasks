<Window x:Class="Calculate_age.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculate_age"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DatePicker x:Name="datepicker" HorizontalAlignment="Left" Margin="500,92,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label" Content="Select your Birthday" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="205,78,0,0" FontSize="24" FontWeight="Bold" Foreground="Black"/>
        <Button x:Name="button" Content="Calculate My Age" HorizontalAlignment="Left" Margin="260,175,0,0" VerticalAlignment="Top" Width="285" FontSize="20"  FontWeight="Bold" Height="60" BorderBrush="#FFC50D0D" Click="Button_Click" Background="#FFE85050">
        </Button>
        <Label x:Name="label1" Content="Calculate Age" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label x:Name="result" Content="" HorizontalAlignment="Center" Margin="80,300,73.6,0"  VerticalAlignment="Top" Height="80" Width="640" FontSize="18" FontWeight="Bold"/>

    </Grid>
</Window>
