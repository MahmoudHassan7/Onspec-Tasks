<Window x:Class="Question3_project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Age Calculator" Height="300" Width="495"
        WindowStartupLocation="CenterScreen"
        Background="#212121">
    <Grid x:Name="Main_Grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="Txt_Enter_yr_Name" Grid.Row="0" Text="Enter Your Birthdate" 
                   FontSize="20" Foreground="White"
                   Margin="10"/>

        <DatePicker Grid.Row="1" x:Name="birthdatePicker" 
                    FontSize="18" Foreground="Black" 
                    Background="#424242" BorderBrush="#424242"
                    Margin="10"/>
        <Button x:Name="Btn_Calc_Age" Grid.Row="2" Content="Calculate Age" 
                FontSize="20" Foreground="White" Background="#2196F3"
                BorderBrush="#2196F3" Margin="10" Click="Calc_Age_Btn_Clk"/>

        <TextBlock Grid.Row="3" x:Name="Age_Output" 
                   FontSize="36" FontWeight="Bold"
                   Foreground="White" TextAlignment="Center"
                   Margin="10"/>
    </Grid>
</Window>
